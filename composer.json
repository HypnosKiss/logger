{
    "name": "sweeper/logger",
    "description": "output log and auto write log",
    "type": "library",
    "keywords": [
        "log",
        "logger",
        "php"
    ],
    "homepage": "https://github.com/HypnosKiss/logger/",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "sweeper",
            "email": "wili.lixiang@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "psr/log": "^1.1",
        "sweeper/design-pattern": "^1.0 || ^2.0",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "Sweeper\\Logger\\": "src/"
        },
        "files": []
    },
    "autoload-dev": {
        "psr-4": {
            "Sweeper\\Test\\": "test"
        }
    },
    "config": {
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "require-dev": {
        "phpunit/phpunit": "^8"
    }
}
